build:
	kubectl apply -f deploy/configmap.yaml > /dev/null
	kubectl apply -f deploy/service.yaml > /dev/null
	kubectl apply -f deploy/deployment.yaml > /dev/null
	kubectl apply -f deploy/ingress.yaml > /dev/null

restart:
	kubectl rollout restart --namespace={{ project_name }} deployment minos-apigateway > /dev/null

logs:
	kubectl logs svc/minos-apigateway --namespace={{ project_name }} --follow --tail 1000
