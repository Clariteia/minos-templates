apiVersion: apps/v1
kind: Deployment
metadata:
  name: minos-apigateway
  namespace: {{ project_name }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: minos-apigateway
  template:
    metadata:
      labels:
        app.kubernetes.io/name: minos-apigateway
    spec:
      containers:
        - name: apigateway
          image: ghcr.io/clariteia/minos-apigateway:0.1.0
          imagePullPolicy: Always
          ports:
            - containerPort: 5566
          envFrom:
            - configMapRef:
                name: apigateway-config