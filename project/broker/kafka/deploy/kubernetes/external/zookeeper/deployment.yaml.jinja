apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ project_name }}-zookeeper
  namespace: {{ project_name }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: {{ project_name }}-zookeeper
  template:
    metadata:
      labels:
        app.kubernetes.io/name: {{ project_name }}-zookeeper
    spec:
      containers:
        - name: {{ project_name }}-zookeeper
          image: wurstmeister/zookeeper:latest
          imagePullPolicy: "IfNotPresent"
          ports:
            - containerPort: 2181