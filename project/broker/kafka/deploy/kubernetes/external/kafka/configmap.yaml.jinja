apiVersion: v1
kind: ConfigMap
metadata:
  name: kafka-config
  namespace: {{ project_name }}
  labels:
    app: kafka
data:
    KAFKA_DELETE_TOPIC_ENABLE: "true"
    KAFKA_ADVERTISED_HOST_NAME: "{{ project_name }}-kafka.{{ project_name }}.svc.cluster.local"
    KAFKA_ADVERTISED_PORT: "9092"
    KAFKA_ZOOKEEPER_CONNECT: "{{ project_name }}-zookeeper.{{ project_name }}.svc.cluster.local:2181"