apiVersion: apps/v1
kind: Deployment
metadata:
  name: apigateway
  namespace: {{ project_name }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: apigateway
  template:
    metadata:
      labels:
        app.kubernetes.io/name: apigateway
    spec:
      containers:
        - name: apigateway
          image: {{ kubernetes_registry }}/{{ project_name }}_apigateway:0.0.1
          imagePullPolicy: "IfNotPresent"
          ports:
            - containerPort: 5566
          envFrom:
            - configMapRef:
                name: apigateway-config