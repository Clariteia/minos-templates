apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ project_name }}-apigateway
  namespace: {{ project_name }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: {{ project_name }}-apigateway
  template:
    metadata:
      labels:
        app.kubernetes.io/name: {{ project_name }}-apigateway
    spec:
      containers:
        - name: apigateway
          image: ghcr.io/clariteia/minos-apigateway:0.1.0
          imagePullPolicy: "IfNotPresent"
          ports:
            - containerPort: 5566
          envFrom:
            - configMapRef:
                name: apigateway-config