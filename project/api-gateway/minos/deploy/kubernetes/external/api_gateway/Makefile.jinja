build:
	docker build --no-cache -t {{ project_name }}_apigateway .
	docker tag {{ project_name }}_apigateway:latest {{ kubernetes_registry }}/{{ project_name }}_apigateway:0.0.1
	docker push {{ kubernetes_registry }}/{{ project_name }}_apigateway:0.0.1

	kubectl create -f ./configmap.yaml
	kubectl create -f ./service.yaml
	kubectl create -f ./deployment.yaml
	kubectl create -f ./ingress.yaml